{
  "name": "ripple-admin",
  "version": "1.0.0",
  "description": "Administration Package for Ripple",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "jshint lib spec index.js",
    "test": "jasmine --config=spec/support/jasmine.json",
    "coverage": "nyc --reporter=html --reporter=text jasmine --config=spec/support/jasmine.json",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "coverage",
      "node_modules",
      "spec/**/*.js"
    ]
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "email-validator": "^2.0.4",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "ewd-document-store": "^1.23.0",
    "ewd-memory-globals": "^1.0.0",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.1.1",
    "jasmine-spy-matchers": "^2.0.0",
    "jshint": "^2.9.5",
    "mockery": "^2.1.0",
    "nock": "^9.4.1",
    "nyc": "^12.0.2"
  }
}
