  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "ewd-document-store": "^1.23.0",
    "ewd-memory-globals": "killmenot/ewd-memory-globals",
    "ewd-session": "^2.19.0",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.1.1",
    "jasmine-spy-matchers": "^2.0.0",
    "eslint": "^4.9.0",
    "mockery": "^2.1.0",
    "nyc": "^12.0.2"
  }
}
